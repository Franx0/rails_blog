<%= form_for [@post, @post.comments.build] do |f| %>
    <% if @post.comments.build.errors.any? %>
        <div id = 'errors'>
            <h2><%= pluralize(@post.comments.build.errors.count, 'errors') %></h2>
            <ul>
                <% @post.comments.build.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :name %></br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :body %></br>
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= button_to "Cancel", @post %>