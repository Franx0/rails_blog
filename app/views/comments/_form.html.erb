<%= form_for [@post, @post.comments.build] do |f| %>
    <p>
        <%= f.label :your_name %></br>
        <%= f.text_field :name, :class => "comment_text" %>
    </p>

    <p>
        <%= f.label :write_your_comment %></br>
        <%= f.text_area :body, :class => "comment_text" %>
    </p>

    <p>
        <%= f.submit "Create your comment", :class => "comment_text submit" %>
    </p>
<% end %>