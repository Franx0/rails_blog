<% if @post.comments.count == 0 %>
    <p>There are not any comments yet</p>
<% else %>
    <div class = "comment_container comment">
        <p class = "comment_name"><strong><%= comment.name %></strong></p>
        <p class = "comment_time comment_name"><%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %></p>
        <hr>
        <p class = "comment_body"><%= comment.body %></p>
    <% if user_signed_in? %>
        <%= link_to "Delete comment", [@post, comment], method: :delete, :class => "links" %><br />
    <% end %>
    </div>
<% end %>

