<%= form_for(@post) do |f| %>
    <%= render "shared/error_messages", :target => @post %>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.label :category %><br />
        <%= f.text_field :category %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= button_to "Cancel", posts_path, method: :get %>