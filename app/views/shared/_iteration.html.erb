<% @post.each do |post| %>
    <% if @post.present? %>
        <div class = "body">
            <h1 class = "title"><%= link_to post.title, post %></h1>
            <p class = "date">Submitted <%= time_ago_in_words(post.created_at) %> Ago</p>
            <p class = "body"><%= post.body %></p>
            <h3><%= post.comments.count %> comments</h3>
        </div>
    <% else %>
        <p>There are no posts containing the term <%= params[:search] %></p>
    <% end %>
<% end %>