<section>
<% @post.each do |post| %>
    <% if @post.present? %>
        <div class = "posts">
            <h2 class = "title"><%= link_to post.title, post %></h2>
            <p class = "date">Submitted <%= time_ago_in_words(post.created_at) %> Ago</p>
            <p class = "body"><%= post.body %></p>
            <div class = "comments">
                <h3><%= post.comments.count %> comments</h3>
            </div>
        </div>
    <% else %>
        <p class = "links">There are no posts containing the term <%= params[:search] %></p>
    <% end %>
<% end %>
</section>